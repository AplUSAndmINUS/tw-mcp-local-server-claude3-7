{
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "printWidth": 88,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.py",
      "options": {
        "parser": "python",
        "printWidth": 88,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.{json,yml,yaml}",
      "options": {
        "tabWidth": 2,
        "printWidth": 80
      }
    },
    {
      "files": "*.md",
      "options": {
        "printWidth": 80,
        "proseWrap": "preserve"
      }
    }
  ]
}
