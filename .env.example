# MCP Server Configuration
# Copy this file to .env and update the values

# ============================================
# REQUIRED SETTINGS
# ============================================

# Anthropic API Key - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================
# SERVER SETTINGS
# ============================================

# Server host and port
HOST=localhost
PORT=8000

# Debug mode (set to true for development)
DEBUG=false

# Enable auto-reload (development only)
RELOAD=false

# ============================================
# CLAUDE API SETTINGS
# ============================================

# Claude model to use
CLAUDE_MODEL=claude-3-sonnet-20240229

# Maximum tokens for responses
MAX_TOKENS=4096

# Temperature for responses (0.0 to 1.0)
TEMPERATURE=0.7

# ============================================
# PLUGIN SETTINGS
# ============================================

# Directory containing plugins
PLUGINS_DIRECTORY=src/mcp_server/plugins

# Enabled plugins (JSON array format)
ENABLED_PLUGINS=["vibe_coder"]

# ============================================
# SECURITY SETTINGS
# ============================================

# Secret key for JWT tokens (change this in production)
SECRET_KEY=your-secret-key-change-this-in-production

# Access token expiration time (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# LOGGING SETTINGS
# ============================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
# LOG_FILE=logs/mcp_server.log

# ============================================
# CORS SETTINGS
# ============================================

# CORS allowed origins (JSON array format)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ============================================
# RATE LIMITING
# ============================================

# Rate limit: requests per minute
RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# ============================================
# LOCAL PROCESSING (OPTIONAL)
# ============================================

# Enable local processing (experimental)
ENABLE_LOCAL_PROCESSING=false

# Local model path (if using local models)
# LOCAL_MODEL_PATH=/path/to/local/model

# Enable GPU processing
GPU_ENABLED=false

# Maximum memory for local processing (MB)
MAX_LOCAL_MEMORY=8192